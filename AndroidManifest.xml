<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mobilez365.puzzly"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="10"
            android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/MainAppTheme">

        <activity
            android:name=".screens.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
    
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.SettingsActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        </activity>


        <activity android:name=".screens.BonusLevelShakeActivity"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name=".screens.BonusLevelTreeActivity"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name=".screens.BonusLevelFlowerActivity"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity android:name=".screens.GameFillActivity"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation|keyboardHidden|screenSize"/>

    </application>
</manifest>
