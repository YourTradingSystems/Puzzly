<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_game">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rlForGame">
    </FrameLayout>

    <RelativeLayout
            android:id="@+id/rlBackgroundAFG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWordAFG"
            android:text="Large Text"
            android:textColor="@color/text_color"
            android:layout_alignParentBottom="true"
            android:textSize="40sp"
            android:typeface="normal"
            android:visibility="gone"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <RelativeLayout
                android:id="@+id/rlBasketsAFG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivCandyAFG"
                    android:src="@drawable/candy_icon"
                    android:layout_centerHorizontal="true"
                    />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivBasketAGF"
                    android:layout_centerInParent="true"
                    android:src="@drawable/img_basket_full"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
        </RelativeLayout>
    </LinearLayout>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnNextAGF"
            android:src="@drawable/selector_arrow_next"
            android:background="@null"
            android:paddingRight="35dp"
        android:scaleType="center"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnPreviousAGF"
            android:src="@drawable/selector_arrow_previous"
            android:background="@null"
            android:paddingLeft="35dp"
        android:scaleType="center"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivResultImageAGF"/>

</RelativeLayout>