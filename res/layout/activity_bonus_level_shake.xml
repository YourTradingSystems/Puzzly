<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlContainer_ABLS"
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/background_game">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivBoxABS"
            android:src="@drawable/img_bonus_basket"
            android:layout_centerInParent="true"/>

    <RelativeLayout
            android:id="@+id/rlCandiesABS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    </RelativeLayout>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNextABS"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/selector_arrow_next"
            android:background="@null"
            android:padding="5dp"
            android:visibility="gone"/>

</RelativeLayout>

