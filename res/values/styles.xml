<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainAppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:screenOrientation">landscape</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="HeaderName">
        <item name="android:padding">@dimen/p_normal</item>
        <item name="android:layout_marginLeft">@dimen/ml_header_name</item>
        <item name="android:layout_marginTop">@dimen/mt_header_name</item>
        <item name="android:textSize">@dimen/ts_big</item>
    </style>

    <style name="HeaderBTN">
        <item name="android:paddingLeft">@dimen/plr_header_button</item>
        <item name="android:paddingRight">@dimen/plr_header_button</item>
        <item name="android:layout_margin">@dimen/m_header_button</item>
        <item name="android:textSize">@dimen/ts_normal</item>
    </style>

</resources>